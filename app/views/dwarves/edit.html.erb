<div class="form-container">
  <h2>Update my dwarf profile</h2>
  <%= simple_form_for(@dwarf) do |f| %>
    <div class="form-inputs">
      <%= f.input :nickname,
                  required: true,
                  input_html: { autocomplete: "nickname" } %>
      <%= f.input :size,
                  required: true,
                  input_html: { autocomplete: "size" } %>
      <%= f.input :gender,
                  required: true,
                  input_html: { autocomplete: "gender" }%>
      <%= f.input :description,
                  required: true,
                  input_html: { autocomplete: "description" } %>
      <%= f.input :photo,
                  required: true,
                  input_html: { autocomplete: "photo" } %>
      <%= f.input :price_per_hour,
                  required: true,
                  input_html: { autocomplete: "price per hour" } %>
      <%= f.input :location,
                  required: true,
                  input_html: { autocomplete: "location" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Edit", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
