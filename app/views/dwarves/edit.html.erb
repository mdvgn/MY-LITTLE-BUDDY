<div class="form-container">
  <h2>Mettre Ã  jour mon profil</h2>
  <%= simple_form_for(@dwarf) do |f| %>
    <div class="form-inputs">
      <%= f.input :nickname,
                  required: true,
                  input_html: { autocomplete: "nickname" } %>
      <%= f.input :size,
                  required: true,
                  input_html: { autocomplete: "size" } %>
      <%= f.input :gender,
                  required: true,
                  input_html: { autocomplete: "gender" }%>
      <%= f.input :description,
                  required: true,
                  input_html: { autocomplete: "description" } %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <%= f.input :price_per_hour,
                  required: true,
                  input_html: { autocomplete: "price per hour" } %>
      <%= f.input :location,
                  required: true,
                  input_html: { autocomplete: "location" } %>
    </div>
    <div class="show-skills-container">
      <p>Mes usages</p>
        <%  @dwarf.dwarf_skills.each do |skill| %>
          <div class="skill">
            <%=  Skill.find(skill.skill_id).skill %>
          </div>
        <% end %>
    </div>
  <%= link_to "Add a skill", new_dwarf_dwarf_skill_path(@dwarf), class: "btn btn-primary" %>

    <div class="form-actions">
    <hr>
      <%= f.button :submit, "Edit", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
