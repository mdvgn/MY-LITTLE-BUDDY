<div class="form-container">
  <h2>Create my dwarf profile</h2>
  <%= simple_form_for(@dwarf) do |f| %>
    <div class="form-inputs">
      <%= f.input :nickname,
                  required: true,
                  input_html: { autocomplete: "nickname" } %>
      <%= f.input :size,
                  collection: 80..150, prompt: "Select your size in cm"%>
      <%= f.input :gender,
                  required: true, collection: [:Male, :Female, :Shemale, :Neutrale],
                  input_html: { autocomplete: "gender" }%>
      <%= f.input :description,
                  required: true,
                  input_html: { autocomplete: "description" } %>
      <%= f.input :photos, as: :file,
                  required: true,
                  input_html: { multiple: true } %>
      <%= f.input :price_per_hour,
                  required: true,
                  input_html: { autocomplete: "price per hour" } %>
      <%= f.input :location,
                  required: true,
                  input_html: { autocomplete: "location" } %>

    </div>
    <hr>
    <div class="form-actions">
      <%= f.button :submit, "Create", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
