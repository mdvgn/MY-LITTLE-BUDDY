
<div class="dwarves-index-search-bar">
  <%= render 'shared/search_bar' %>
    <h1>Des nains pour tous les gouts! Et avec tous les gouts!</h1>
  <div class="cards-dwarf-container">
    <div class="cards-dwarf">
        <% if @dwarves.join == "" %>
       <div class="no-result">
        <h2>Aucun nain trouvé avec ces critères <i class="far fa-sad-cry"></i></h2>
       </div>
        <% else %>
        <% @dwarves.each do |dwarf| %>
          <%= render 'shared/card', dwarf: dwarf%>
        <% end %>
        <% end %>
    </div>
    <div class="map-container">
      <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
