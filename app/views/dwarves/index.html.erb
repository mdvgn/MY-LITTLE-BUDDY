
<div class="dwarves-index-search-bar">
  <%= render 'shared/search_bar' %>
  <div class="cards-dwarf-container">
    <h1>Des nains pour tous les gouts! Et avec tous les gouts!</h1>
    <div class="cards-dwarf">
        <% @dwarves.each do |dwarf| %>
          <%= render 'shared/card', dwarf: dwarf%>
        <% end %>
    </div>
    <div class="map-container">
      <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
