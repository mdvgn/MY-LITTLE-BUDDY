<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%# <%= image_tag "logo.png" %>
    <%= image_tag "http://res.cloudinary.com/dqyvlxybo/image/upload/v1629215305/bgpccit8dqe6psvud6sr.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
         <%# link_to "Home", root_path, class: "nav-link" %>
        </li>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.avatar.attached? %>
            <%= cl_image_tag current_user.avatar.key, :width=>100, :height=>100, :gravity=>"faces", :crop=>"thumb", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
            <%= image_tag "https://image.flaticon.com/icons/png/512/149/149071.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <% if current_user && current_user.is_dwarf == true %>
          <% if current_user && Dwarf.find_by_user_id(current_user.id) == nil %>
          <%= link_to "Create my dwarf profile", new_dwarf_path, class: "dropdown-item" %>
          <% else  %>
          <%= link_to "Edit my dwarf profile", edit_dwarf_path(Dwarf.find_by_user_id(current_user.id)), class: "dropdown-item" %>
          <% end  %>
          <hr>
        <% end %>
          <%= link_to "Edit my user profile", edit_user_path(current_user.id), class: "dropdown-item" %>
          <%= link_to "See the dwarves", dwarves_path, class: "dropdown-item" %>
          <%= link_to "See my rents", user_rents_path(current_user.id), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
