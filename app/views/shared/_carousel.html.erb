
<section>
    <h1>Notre Top 7</h1>
    <div class="container-carousel">
        <div class="carousel">
            <input type="radio" name="slides" checked="checked" id="slide-1">
            <input type="radio" name="slides" id="slide-2">
            <input type="radio" name="slides" id="slide-3">
            <input type="radio" name="slides" id="slide-4">
            <input type="radio" name="slides" id="slide-5">
            <input type="radio" name="slides" id="slide-6">
            <input type="radio" name="slides" id="slide-7">
            <ul class="carousel__slides">
            <% dwarves = Dwarf.all  %>
            <% dwarves.each do |dwarf| %>
                <li class="carousel__slide">
                    <figure>
                        <div>
                          <%= cl_image_tag dwarf.photos[0].key, class: "bigimg"%>
                        </div>
                        <figcaption>
                        <div>
                          <%= link_to dwarf.nickname, dwarf_path(dwarf.id) %>
                          <hr>
                          <%= dwarf.description %>
                          <div class="reviews_container">
                            <% rents = Rent.where(dwarf_id: dwarf.id) %>
                              <% rents.each do |rent| %>
                                <% reviews = Review.where(rent_id: rent.id) %>
                                <% review = reviews.last %>
                            <% if  review != nil %>
                                <% stars = review[:rating].to_i  %>
                                  <% stars.times do %>
                                    <i class="fas fa-star"></i>
                            <% end %>
                                <% end %>
                              <% end %>
                          </div>
                          <% if current_user && dwarf.user_id != current_user.id  %>
                            <div class="hire-btn">
                              <%= link_to 'Hire me', new_dwarf_rent_path(dwarf.id), class: "btn btn-primary"  %>
                            </div>
                          <% end  %>
                        </div>
                        </figcaption>
                    </figure>
                </li>
            <% end %>

            </ul>
            <ul class="carousel__thumbnails">
                <li>
                    <label for="slide-1"><img class="imgthumb" img src="http://res.cloudinary.com/dqyvlxybo/image/upload/v1629197013/igwyg5sj0og37480nwe3.jpg" alt=""></label>
                </li>
                <li>
                    <label for="slide-2"><img class="imgthumb" img src="http://res.cloudinary.com/dqyvlxybo/image/upload/v1629197127/vf6ejza9lebzm13ywxmz.jpg" alt=""></label>
                </li>
                <li>
                    <label for="slide-3"><img class="imgthumb" img src="http://res.cloudinary.com/dqyvlxybo/image/upload/v1629197098/myvcunz1ixhdtl3q3pi8.jpg" alt=""></label>
                </li>
                <li>
                    <label for="slide-4"><img class="imgthumb" img src="http://res.cloudinary.com/dqyvlxybo/image/upload/v1629197115/kpaie6r4zq7iost9wxpd.jpg" alt=""></label>
                </li>
                <li>
                    <label for="slide-5"><img class="imgthumb" img src="http://res.cloudinary.com/dqyvlxybo/image/upload/v1629197142/yi0kant4zxaqco2lsr1a.gif" alt=""></label>
                </li>
                <li>
                    <label for="slide-6"><img class="imgthumb" img src="http://res.cloudinary.com/dqyvlxybo/image/upload/v1629197080/mjgv7ogws1tzolaurzld.jpg" alt=""></label>
                </li>
                <li>
                    <label for="slide-7"><img class="imgthumb" img src="http://res.cloudinary.com/dqyvlxybo/image/upload/v1629197062/hzfya7bdu72cn9neydwe.jpg" alt=""></label>
                </li>
            </ul>
        </div>
    </div>
</section>
