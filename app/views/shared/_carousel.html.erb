
<section>
    <h1>Notre Top 7</h1>
    <div class="container-carousel">
        <div class="carousel">
            <input type="radio" name="slides" checked="checked" id="slide-1">
            <input type="radio" name="slides" id="slide-2">
            <input type="radio" name="slides" id="slide-3">
            <input type="radio" name="slides" id="slide-4">
            <input type="radio" name="slides" id="slide-5">
            <input type="radio" name="slides" id="slide-6">
            <input type="radio" name="slides" id="slide-7">
            <ul class="carousel__slides">
            <% dwarves = Dwarf.all  %>
            <% dwarves.each do |dwarf| %>
                <li class="carousel__slide">
                    <figure>
                        <div>
                          <%= cl_image_tag dwarf.photos[0].key, class: "bigimg"%>
                        </div>
                        <figcaption>
                        <div>
                          <%= link_to dwarf.nickname, dwarf_path(dwarf.id) %>
                          <hr>
                          <%= dwarf.description %>
                            <hr>
                          <div class="reviews_container">
                            <% rents = Rent.where(dwarf_id: dwarf.id) %>
                              <% rents.each do |rent| %>
                            <% if  rent.review != nil %>
                                <% stars = rent.rating.to_i  %>
                                  <% stars.times do %>
                                    <i class="fas fa-star"></i>
                            <% end %>
                                <% end %>
                              <% end %>
                          </div>
                          <% if current_user && dwarf.user_id != current_user.id  %>
                          <hr>
                            <div class="hire-btn">
                              <%= link_to 'Loue-moi!', new_dwarf_rent_path(dwarf.id), class: "btn btn-primary"  %>
                            </div>
                          <% end  %>
                        </div>
                        </figcaption>
                    </figure>
                </li>
            <% end %>

            </ul>
            <ul class="carousel__thumbnails">
                <li>
                    <label for="slide-1"><div class="top-carousel">n°1</div></label>
                </li>
                <li>
                    <label for="slide-2"><div class="top-carousel">n°2</div></label>
                </li>
                <li>
                    <label for="slide-3"><div class="top-carousel">n°3</div></label>
                </li>
                <li>
                    <label for="slide-4"><div class="top-carousel">n°4</div></label>
                </li>
                <li>
                    <label for="slide-5"><div class="top-carousel">n°5</div></label>
                </li>
                <li>
                    <label for="slide-6"><div class="top-carousel">n°6</div></label>
                </li>
                <li>
                    <label for="slide-7"><div class="top-carousel">n°7</div></label>
                </li>
            </ul>
        </div>
    </div>
</section>
